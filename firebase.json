{
    "hosting": [
        {
            "target": "main",
            "public": "dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**",
                "admin.html"
            ],
            "rewrites": [
                {
                    "source": "/api/verify",
                    "function": "verifyEmail"
                },
                {
                    "source": "/createRazorpayOrder",
                    "function": "createRazorpayOrder"
                },
                {
                    "source": "/api/webhook/razorpay",
                    "function": "handleRazorpayWebhook"
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "admin",
            "public": "dist",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**",
                "index.html"
            ],
            "rewrites": [
                {
                    "source": "/adminAPI",
                    "function": "adminAPI"
                },
                {
                    "source": "**",
                    "destination": "/admin.html"
                }
            ]
        }
    ],
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ]
        }
    ]
}